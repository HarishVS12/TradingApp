<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoardActivity"
    >

    <TextView
        android:id="@+id/loginMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:layout_marginEnd="104dp"
        android:layout_marginTop="12dp"
        android:text="Login Success!"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/griddy"
        app:layout_constraintEnd_toStartOf="@+id/signOutButt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/signOutButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign OUT"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/griddy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginMessage"
        app:layout_constraintVertical_bias="1.0"
        />

    <GridLayout
        android:id="@+id/griddy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginMessage"
        android:columnCount="2"
        android:rowCount="3">

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:text="Earnings"
            android:textSize="20sp"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20sp"
            android:text="Data"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20sp"
            android:text="Broker Details"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20sp"
            android:text="Events"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20sp"
            android:id="@+id/profile"
            android:text="Profile"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:textSize="20sp"
            android:text="Settings"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>